<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE">


    <TextView
      android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/yellow_second"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
              android:id="@+id/lay_phone"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="30dp">


            <ImageView
                android:layout_width="17dp"
                android:layout_height="25dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_mobile" />


            <EditText
                android:id="@+id/phone_Edt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:hint="请输入手机号（11位）"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="11"
                android:singleLine="true"
                android:textColor="@color/color_black_333333"
                android:textColorHighlight="@color/color_grey_999999"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/lay_phone"
            android:background="@color/white"
            android:gravity="center"
            android:padding="20dp"
            android:paddingLeft="21dp">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="28dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_yanzhengma" />

            <EditText
                android:id="@+id/pswEdt"
                android:layout_width="0dp"
                android:layout_height="36dp"
               android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:drawablePadding="8dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:background="@color/transparent"
                android:lines="1"
                android:maxLines="6"
                android:singleLine="true"
                android:textColor="@color/color_black_333333"
                android:textColorHighlight="@color/color_grey_999999"
                android:textSize="15sp"/>

              <Button
                  android:id="@+id/codeButton"
                  android:background="@color/yellow_second"
                  android:layout_width="105dp"
                  android:layout_height="47dp"
                  android:layout_marginLeft="12dp"
                  android:layout_gravity="center"
                  android:text="获取验证码"
                  android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@color/yellow_second"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </RelativeLayout>




</LinearLayout>